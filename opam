build: [
  ["./configure" "--prefix=%{prefix}%"]
  [make]
]
install: [make "install"]
remove: [
       ["ocamlfind" "remove" "rdr"]
       ["rm" "-f" "%{bin}%/rdr"]   
       ]
depends: "ocamlfind" {build}
available: [ocaml-version >= "4.02"]
